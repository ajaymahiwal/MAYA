    <% if (successMsg && successMsg.length){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= successMsg %>  
          </div>
    <% } %>

    <% if (errorMsg && errorMsg.length){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= errorMsg %>  
          </div>
    <% } %>

    <main id="profile">
      <section class="sec" id="sec-1">
        <div class="user-info">
          <img src="<%= userProfile.image %>" alt="Error due to some issue profile photo is not visible,Please Reload" class="user-img profileWalaUser" referrerpolicy="no-referrer">
          <!-- <div class="user-img"></div> -->
          <h2 class="user-name txt-cap profileWalaUser"><%= userProfile.name %></h2>
        </div>
        <div class="user-bio">
          <% if (userProfile.bio && userProfile.bio.length) { %>
          <p><%= userProfile.bio %></p>
          <% } else{%>
          <p>Hello <%= userProfile.name %>👋, Write Your Bio Here 👀</p>
          <% } %>
        </div>

        <div class="user-stat">
          <div id="post-sec" class="posts-ref">
              <div><%= (postLength) ? postLength : 0%> </div>
              <div>Post</div>
            </div>
          <div id="followers-sec" class="posts-ref">
            <div><%= (userProfile && userProfile.followers?.length) ? userProfile.followers.length : 0%> </div>
            <div>Followers</div>
          </div>
          <div id="followings-sec" class="posts-ref">
            <div><%= (userProfile && userProfile.followings?.length) ? userProfile.followings.length : 0%> </div>
            <div>Following</div>
          </div>
        </div>
        
        <% if (currUser && currUser.id == userProfile.id) { %>
          <a href="/user/profile/<%= userProfile._id %>/edit/#profile" class="green-btn-adv">Edit Profile</a>         
        <% } else{%>
            <% if (currUser) { %>
              <% if (currUser.followings && currUser.followings.length && currUser.followings.includes(userProfile.id)) { %>
                <button class="green-btn-adv  following follow-star">Following</button>
                <% } else{%>
                  <button class="green-btn-adv follow-star">Follow</button>
                  <% } %>
            <% } else{%>
              <button class="green-btn-adv follow-star">Follow</button>
            <% } %>
        <% } %>

      </section>

      <section class="sec-2">
        <h1 class="section-main-title"><%= userProfile.name %>'s Followings</h1>
        <div class="user-f">
          <% for( let i = userProfile.followings.length-1; i >= 0; i-- ) { %>
            <!-- <p class="following-user"><%= userProfile.followings[i].id %></p> -->
                <div>
                    
                    <a href="/user/profile/<%= userProfile.followings[i].id%>/#profile" class="one-of-user">
                        <img src="<%= userProfile.followings[i].image%>" alt="user-img" class="user-dp">
                        <h2><%= userProfile.followings[i].name%></h2>
                      </a>
                      <!-- <% if (currUser) { %>
                        <% if (currUser.id != userProfile.followings[i].id) { %>
                            <% if (currUser.followings.includes(userProfile.followings[i].id)) { %>
                                <button class="green-btn-adv user-follow-btn following follow">Following</button>
                                <% } else{%>
                                  <button class="green-btn-adv user-follow-btn follow">Follow</button>
                                  <% } %>
                        <% } %>
                      <% } else{%>
                        <button class="green-btn-adv user-follow-btn follow">Follow</button>
                      <% } %> -->
                </div>

            <% } %>
        </div>

        <% if (userProfile.followings?.length == 0) { %>
            <h5 class="text-center">No Followings By <%= userProfile.name.toUpperCase()%></h5>
           <% } %>
      </section>

    </main>


