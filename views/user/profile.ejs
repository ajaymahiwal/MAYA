  <body>
    <%-include('../includes/navbar.ejs')%>

    
    <% if (successMsg && successMsg.length){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= successMsg %>  
          </div>
    <% } %>

    <% if (errorMsg && errorMsg.length){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= errorMsg %>  
          </div>
    <% } %>

    <main id="profile">
      <section class="sec" id="sec-1">
        <div class="user-info">
          <img src="<%= userProfile.image %>" alt="Error due to some issue profile photo is not visible,Please Reload" class="user-img" referrerpolicy="no-referrer">
          <!-- <div class="user-img"></div> -->
          <h2 class="user-name txt-cap"><%= userProfile.name %></h2>
        </div>
        <div class="user-bio">
          <% if (userProfile.bio && userProfile.bio.length) { %>
          <p><%= userProfile.bio %></p>
          <% } else{%>
          <p>Hello <%= userProfile.name %>ðŸ‘‹, Write Your Bio Here ðŸ‘€</p>
          <% } %>
        </div>

        <div class="user-stat">
          <div id="post-sec">
              <a href="#posts" class="posts-ref">
              <div><%= (listings && listings.length) ? listings.length : 0%> </div>
              <div>Post</div>
            </a>
            </div>
          <div id="followers-sec" class="posts-ref">
            <div><%= (userProfile && userProfile.followers?.length) ? userProfile.followers.length : 0%> </div>
            <div>Followers</div>
          </div>
          <div id="followings-sec" class="posts-ref">
            <div><%= (userProfile && userProfile.followings?.length) ? userProfile.followings.length : 0%> </div>
            <div>Following</div>
          </div>
        </div>
        
        <% if (currUser && currUser.id == userProfile.id) { %>
          <a href="/user/profile/<%= userProfile._id %>/edit/#profile" class="green-btn-adv-1">Edit Profile</a>         
        <% } else{%>
            <% if (currUser) { %>
              <% if (currUser.followings && currUser.followings.length && currUser.followings.includes(userProfile.id)) { %>
                <button class="green-btn-adv-1 following follow">Following</button>
                <% } else{%>
                  <button class="green-btn-adv-1 follow">Follow</button>
                  <% } %>
            <% } else{%>
              <button class="green-btn-adv-1 follow">Follow</button>
            <% } %>
        <% } %>

