              <% } %>  
              <% } else{%>
                <!-- use image like github, no issue section mein vala image vo cartoon and fox -->
                <div>
                  <h3>
                    No Result Found !
                  </h3>
                </div>
              <% } %>
          </div>
        </div>
      </section>

      <% if (currUser && currUser.id == userProfile.id) { %>
        <section id="sec-3">
          <div class="green-btn-adv logout del-btn">LogOut Me :)</div>
          <div id="confirmBox" class="confirm-box hide">
            <h1>Do You Want To LogOut ?</h1>
            <div>
                <form action="/logout?_method=DELETE" method="post">
                    <button class="green-btn del-btn">Yes,I want</button>
                </form>
                <button class="green-btn" id="no-btn">No</button>
            </div>
          </div>
        </section>
      <% } %>

    </main>

    


    <script>
        let navLinks = document.getElementById("nav-links");
        let optionResult = document.getElementById("option-result-par");
      // console.dir(navLinks);

        navLinks.addEventListener('click',(e)=>{
            // console.log(e.target.nodeName)

            if((!e.target.classList.contains("active")) && (e.target.nodeName == 'LI')){
              let idx = e.target.getAttribute("id");
              // console.log(idx);
              for(let i=0;i<navLinks.children.length;i++){
                if(i == idx){
                  navLinks.children[i].classList.add("active");
                }else{
                  navLinks.children[i].classList.remove("active");
                }
              }

              for(let i=0;i<optionResult.children.length;i++){
                if(i == idx){
                  optionResult.children[i].classList.remove("hide");
                }else{
                  if(!optionResult.children[i].classList.contains("hide")){
                    optionResult.children[i].classList.add("hide");
                  }
                }
              }
            }
        })
    </script>

    <script>
       let delBtn = document.querySelector('.del-btn');
        let confirmBox = document.querySelector('#confirmBox');


       if(delBtn){
        delBtn.addEventListener('click',(e)=>{
            confirmBox.classList.toggle("hide");


            if(!confirmBox.classList.contains('hide')){
            window.addEventListener('click',(e)=>{
                // console.log(e.target);
                if((e.target != confirmBox) && (e.target != delBtn) ){
                    confirmBox.classList.add('focus-eff');
                    if(confirmBox.classList.contains('focus-eff')){
                        setTimeout(()=>{
                            // console.log('effect class is deleted !');
                            confirmBox.classList.remove('focus-eff');
                        },500);
                    }
                }
            })
        }
        })
       }

        let noBtn = document.querySelector("#no-btn");
        if(noBtn){
          noBtn.addEventListener('click',(e)=>{
            confirmBox.classList.add("hide");
        })
        }
        
    
    </script>

    <!-- follow feature -->
    <script>
      let followBtns = document.getElementsByClassName("follow");
      // console.log(followBtns.length)
      // console.log(followBtns)
      for(let i=0;i<followBtns.length;i++){
        // console.log(followBtns[i])
        followBtns[i].addEventListener("click",(e)=>{
          // console.log("btn clicked")
        if(`<%=currUser%>`){
          if(followBtns[i].classList.contains("following")){

          followBtns[i].classList.remove("following");
          // followBtns[i].innerText = "Follow";

          followBtns[i].disabled = true;

          fetch("/user/follow-unfollow",{
            method:"DELETE",
            headers:{
              'Content-Type':'application/json'
            },
            body: JSON.stringify({
              fanID:`<%=currUser?.id%>`,
              starID:`<%=userProfile?.id%>`
            }),
          }).then(response=>{
            if(response.ok){
              console.log("unfollow request successful.")
              window.location.href = `/user/profile/<%=userProfile.id%>`;
            }else{
              console.log("unfollow request failed.")
            }
          })

          
        }else{
          followBtns[i].classList.add("following");
          // followBtns[i].innerText = "Following";
          followBtns[i].disabled = true;

          fetch("/user/follow-unfollow",{
            method:'POST',
            headers:{
              'Content-Type':'application/json'
            },
            body: JSON.stringify({
              fanID:`<%=currUser?.id%>`,
              starID:`<%=userProfile?.id%>`
            }),
          }).then(response=>{
            if(response.ok){
              console.log("follow request successful.")
              window.location.href = `/user/profile/<%=userProfile.id%>`;
            }else{
              console.log("follow request failed.")
            }
          })


        }
        }else{
          window.location.href = "/user-is-not-login";
        }
      })
      }
    </script>


    <!-- redirection to see followers and other -->
    <script>
      let followers = document.getElementById("followers-sec");
      let followings = document.getElementById("followings-sec");
      // let posts = document.getElementById("post-sec");

      followers.addEventListener("click",(e)=>{
        window.location.href = `/user/profile/<%=userProfile.id%>/followers`;
      });
      followings.addEventListener("click",(e)=>{
        window.location.href = `/user/profile/<%=userProfile.id%>/followings`;
      });
   
    </script>

