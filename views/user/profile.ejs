            <%for(let i=listings.length-1;i>=0;i--){%>
            <div>
              <h3><%= listings[i].title %></h3>
              <a
                href="/listings/<%= listings[i]._id %>"
                target="_blank"
                class="show-in-detail"
                >Show In Detail</a
              >
            </div>
            <% } %> 
            <% } else{%>
              <!-- use image like github, no issue section mein vala image vo cartoon and fox -->
              <div>
                <h3>
                  No Result Found !
                </h3>
              </div>
            <% } %>
          </div>
          <div class="all-task hide">
            <% if (reviews && reviews.length) { %> 
              <%for(let i=reviews.length-1;i>=0;i--){%>
              <div>
                <!-- <p>
                    <% for( let star = 0; star < reviews[i].rating; star++ ) { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="rgba(240,187,64,1)"><path d="M12.0006 18.26L4.94715 22.2082L6.52248 14.2799L0.587891 8.7918L8.61493 7.84006L12.0006 0.5L15.3862 7.84006L23.4132 8.7918L17.4787 14.2799L19.054 22.2082L12.0006 18.26Z"></path></svg>
                    <% } %>
                </p> -->
